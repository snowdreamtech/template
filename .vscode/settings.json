{
    // ------------------------------------------------------------
    // 1. Workbench Settings
    // ------------------------------------------------------------
    // Disable the "new version" message from vscode-icons to keep the UI clean
    "vsicons.dontShowNewVersionMessage": true,
    // Disable layout control buttons in the title bar to save space
    "workbench.layoutControl.enabled": false,
    // Do not show any editor or welcome page on startup
    "workbench.startupEditor": "none",
    // Set the color theme to Solarized Dark
    "workbench.colorTheme": "Solarized Dark",
    // Set the icon theme to vscode-icons for better file type recognition
    "workbench.iconTheme": "vscode-icons",
    // ------------------------------------------------------------
    // AI Assistant & Terminal Configuration
    // ------------------------------------------------------------
    // Configure recommended files for SpecKit to improve context matching in chat
    "chat.promptFilesRecommendations": {
        "speckit.constitution": true, // Recommend project constitution
        "speckit.specify": true, // Recommend requirements specification
        "speckit.plan": true, // Recommend execution plan
        "speckit.tasks": true, // Recommend task list
        "speckit.implement": true // Recommend implementation details
    },
    // Terminal auto-approval: Grant silent execution rights for specific script paths
    "chat.tools.terminal.autoApprove": {
        ".specify/scripts/bash/": true, // Allow auto-running Bash scripts in .specify
        ".specify/scripts/powershell/": true // Allow auto-running PowerShell scripts in .specify
    },
    // ------------------------------------------------------------
    // 2. Editor Behavior & Formatting
    // ------------------------------------------------------------
    // Disable the minimap to maximize horizontal editing space
    "editor.minimap.enabled": false,
    // Enable auto-save with a delay to prevent data loss
    "files.autoSave": "afterDelay",
    // Set auto-save delay to 1000ms (1 second)
    "files.autoSaveDelay": 1000,
    // Show whitespace differences in the diff editor
    "diffEditor.ignoreTrimWhitespace": false,
    // Enable accessibility support for screen readers
    "editor.accessibilitySupport": "on",
    // Automatically format code on save for consistent style across the project
    "editor.formatOnSave": true,
    // --- Premium Interaction Optimizations ---
    // Enable smooth caret animation for a more fluid typing experience
    "editor.cursorSmoothCaretAnimation": "on",
    // Use smooth cursor blinking to reduce visual fatigue
    "editor.cursorBlinking": "smooth",
    // Enable colorized bracket pairs to easily match nested scopes
    "editor.bracketPairColorization.enabled": true,
    // Highlight the active bracket pair guides
    "editor.guides.bracketPairs": "active",
    // Enable Sticky Scroll to keep scope headers (classes/methods) visible at the top
    "editor.stickyScroll.enabled": true,
    // Automatically close brackets when typing
    "editor.autoClosingBrackets": "always",
    // Automatically close quotes when typing
    "editor.autoClosingQuotes": "always",
    // Customize the window title to show file status, name, and project root
    "window.title": "${dirty}${activeEditorShort}${separator}${rootName}",
    // ------------------------------------------------------------
    // 3. UI & Performance Tweaks
    // ------------------------------------------------------------
    // Disable compact folders in explorer for a clearer hierarchical view
    "explorer.compactFolders": false,
    // Enable smooth scrolling for lists and trees
    "workbench.list.smoothScrolling": true,
    // Prioritize recently used items in suggestion lists
    "editor.suggestSelection": "recentlyUsed",
    // Enable GPU hardware acceleration in the integrated terminal for better performance
    "terminal.integrated.gpuAcceleration": "on",
    // Set terminal scrollback buffer to 10,000 lines
    "terminal.integrated.scrollback": 10000,
    // Ensure files end with a newline character (POSIX standard)
    "files.insertFinalNewline": true,
    // Automatically trim trailing whitespace on save
    "files.trimTrailingWhitespace": true,
    // Disable confirmation dialog when dragging and dropping files in the explorer
    "explorer.confirmDragAndDrop": false,
    // Disable confirmation dialog when deleting files (faster workflow with Git)
    "explorer.confirmDelete": false,
    // ------------------------------------------------------------
    // 4. Remote & Search
    // ------------------------------------------------------------
    // Use hybrid port forwarding source for better remote development compatibility
    "remote.autoForwardPortsSource": "hybrid",
    // Show login terminal for SSH connections to help debug connection issues
    "remote.SSH.showLoginTerminal": true,
    // Increase connection timeout to avoid dropped connections on slow networks
    "remote.SSH.connectTimeout": 60,
    // Exclude build artifacts and dependencies from search to improve performance
    "search.exclude": {
        "**/node_modules": true,
        "**/dist": true,
        "**/build": true,
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true
    },
    // Exclude certain files from the file explorer (optional, keeping minimal for now)
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true
    },
    // ------------------------------------------------------------
    // 5. Language Specific Settings
    // ------------------------------------------------------------
    // [Markdown] Enable word wrap and disable quick suggestions for distraction-free writing
    "[markdown]": {
        "editor.wordWrap": "on",
        "editor.quickSuggestions": {
            "comments": "off",
            "strings": "off",
            "other": "off"
        },
        "editor.unicodeHighlight.ambiguousCharacters": false
    },
    // [JSON/JSONC] Use built-in formatter
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    // [YAML] Standardize tab size to 2 spaces
    "[yaml]": {
        "editor.tabSize": 2,
        "editor.autoIndent": "advanced"
    },
    // ------------------------------------------------------------
    // 6. Git & Automation
    // ------------------------------------------------------------
    // Automatically fetch commits from remote (keep local graph up-to-date)
    "git.autofetch": true,
    // Disable confirmation dialog when syncing code (push/pull)
    "git.confirmSync": false,
    // Auto-detect tasks from scripts (npm, gulp, etc.)
    "task.autoDetect": "on",
    // ------------------------------------------------------------
    // 7. Security, Privacy & Advanced Performance
    // ------------------------------------------------------------
    // [Privacy] Disable telemetry to respect user privacy and save network bandwidth
    "telemetry.telemetryLevel": "off",
    // [Security] Enable Workspace Trust to restrict execution in untrusted folders
    "security.workspace.trust.enabled": true,
    // [Performance] Exclude high-volume folders from file watching to reduce CPU usage
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/*/**": true,
        "**/dist/**": true,
        "**/build/**": true,
        "**/.hg/store/**": true
    },
    // [Debug] Increase debug console font size for better readability
    "debug.console.fontSize": 14,
    // [Terminal] Customize cursor blinking in terminal
    "terminal.integrated.cursorBlinking": true,
    // ------------------------------------------------------------
    // 8. Expert Tweaks (Terminal, Scrolling, Indentation)
    // ------------------------------------------------------------
    // [Terminal] Increase font size for better readability
    "terminal.integrated.fontSize": 14,
    // [Terminal] Set line height to 1.2 for comfortable spacing
    "terminal.integrated.lineHeight": 1.2,
    // [Editor] Enable smooth scrolling for code editor (matches list scrolling)
    "editor.smoothScrolling": true,
    // [Editor] Render whitespace only on selected text to reduce visual noise
    "editor.renderWhitespace": "selection",
    // [Editor] Enable breadcrumbs for better navigation context
    "breadcrumbs.enabled": true,
    // [Editor] Show indentation guides for active block
    "editor.guides.indentation": true,
    // ------------------------------------------------------------
    // 10. Code Intelligence & Refactoring
    // ------------------------------------------------------------
    // [Refactoring] Automatically organize imports on save (crucial for clean code)
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit"
    },
    // [Inlay Hints] Show type hints for parameters and variables (like IntelliJ)
    "editor.inlayHints.enabled": "on",
    "editor.inlayHints.parameterNames.enabled": "all",
    // [Suggestions] Show ghost text for inline completions
    "editor.suggest.preview": true,
    // [Snippets] Place snippets at the bottom of the suggestion list
    "editor.snippetSuggestions": "bottom",
    // ------------------------------------------------------------
    // 11. Diff & Merge Enhancements
    // ------------------------------------------------------------
    // [Diff] Render side-by-side diffs by default
    "diffEditor.renderSideBySide": true,
    // [Diff] Hide unchanged regions to focus on what matters
    "diffEditor.hideUnchangedRegions.enabled": true,
    // [Merge] Use the smart experimental merge algorithm
    "mergeEditor.diffAlgorithm": "advanced",
    // ------------------------------------------------------------
    // 12. Zen Mode & Editor Management
    // ------------------------------------------------------------
    // [Zen Mode] Hide everything for pure code focus (but keep line numbers)
    "zenMode.hideLineNumbers": false,
    "zenMode.hideStatusBar": true,
    "zenMode.fullScreen": true,
    // [Editor Limit] Limit open tabs to 10 to save memory and mental load
    "workbench.editor.limit.enabled": true,
    "workbench.editor.limit.value": 10,
    "workbench.editor.limit.perEditorGroup": true,
    // [Search] Smart case matching (case-insensitive unless capital letters used)
    "search.smartCase": true,
    // [Timeline] Filter out noisy Git history for build files
    "timeline.excludeSources": [],
    // ------------------------------------------------------------
    // 13. Debug & Terminal Enhancements
    // ------------------------------------------------------------
    // [Debug] Show variable values inline during debugging
    "debug.inlineValues": "on",
    // [Terminal] Linux specific: Copy text on selection (X11 style)
    "terminal.integrated.copyOnSelection": true,
    // ------------------------------------------------------------
    // 14. File Integrity & Visual Guides
    // ------------------------------------------------------------
    // [Encoding] Enforce UTF-8 for cross-platform consistency
    "files.encoding": "utf8",
    // [EOL] Enforce LF (Linux/Mac style) line endings
    "files.eol": "\n",
    // [Rulers] Show vertical rulers at 80 and 120 characters to guide line length
    "editor.rulers": [
        80,
        120
    ],
    // [History] Limit local history to keep the .history folder manageable
    "workbench.localHistory.maxFileEntries": 50,
    "workbench.localHistory.mergeWindow": 10,
    // ------------------------------------------------------------
    // 15. Extension Specific & Testing
    // ------------------------------------------------------------
    // [Testing] Automatically open the peek view on test failure
    "testing.automaticallyOpenPeekView": "failureInVisibleDocument",
    // [Markdown] Sync scroll between editor and preview
    "markdown.preview.scrollEditorWithPreview": true,
    "markdown.preview.scrollPreviewWithEditor": true,
    // [Shell] Use 'foxundermoon.shell-format' as the default formatter for shell scripts
    "[shellscript]": {
        "editor.defaultformatter": "foxundermoon.shell-format"
    },
    // ------------------------------------------------------------
    // 16. File Associations
    // ------------------------------------------------------------
    // Map specific file patterns to language identifiers for syntax highlighting and features
    "files.associations": {
        // --- Web / JavaScript / TypeScript ---
        "*.js": "javascript",
        "*.jsx": "javascriptreact",
        "*.ts": "typescript",
        "*.tsx": "typescriptreact",
        "*.vue": "vue",
        "*.svelte": "svelte",
        "*.html": "html",
        "*.css": "css",
        "*.scss": "scss",
        "*.less": "less",
        "*.wasm": "wasm",
        // --- Python Ecosystem ---
        "*.py": "python",
        "*.pyi": "python",
        "*.pyw": "python",
        "*.pyd": "python",
        "requirements*.txt": "pip-requirements",
        "Pipfile": "toml",
        "Pipfile.lock": "json",
        // --- Static Languages (Go / Rust / Java / Kotlin) ---
        "*.go": "go",
        "go.mod": "go.mod",
        "go.sum": "go.sum",
        "*.rs": "rust",
        "*.java": "java",
        "*.kt": "kotlin",
        "*.kts": "kotlin",
        // --- Low-level & Mobile (C / C++ / Objective-C / Swift) ---
        "*.c": "c",
        "*.h": "cpp",
        "*.cpp": "cpp",
        "*.hpp": "cpp",
        "*.m": "objective-c",
        "*.mm": "objective-cpp",
        "*.swift": "swift",
        // --- Dynamic Scripting (PHP / Ruby / Perl) ---
        "*.php": "php",
        "*.phtml": "php",
        "*.rb": "ruby",
        "Gemfile": "ruby",
        "Rakefile": "ruby",
        "*.pl": "perl",
        "*.pm": "perl",
        // --- Shell & Automation (Shell / PowerShell / Makefile) ---
        "*.sh": "shellscript",
        ".bash*": "shellscript",
        ".zsh*": "shellscript",
        ".profile": "shellscript",
        "*.ps1": "powershell",
        "*.psm1": "powershell",
        "Makefile": "makefile",
        "GNUmakefile": "makefile",
        // --- Infrastructure & Cloud Native (Docker, K8s, Terraform, Nginx) ---
        "Dockerfile*": "dockerfile",
        "docker-compose*.yml": "yaml",
        "*.tf": "terraform",
        "*.tfvars": "terraform",
        "*.hcl": "hcl",
        "nginx.conf": "nginx",
        "*.kubeconfig": "yaml",
        // --- Configs & Data (YAML, JSON, TOML, SQL, XML) ---
        "*.yaml": "yaml",
        "*.yml": "yaml",
        "*.json": "json",
        "*.jsonc": "jsonc",
        ".eslintrc": "jsonc",
        ".prettierrc": "json",
        "*.toml": "toml",
        "*.sql": "sql",
        "*.xml": "xml",
        "*.plist": "xml",
        ".env*": "properties",
        "*.ini": "ini",
        ".editorconfig": "properties",
        // --- Version Control & System (Git / SSH) ---
        ".gitignore": "ignore",
        ".gitconfig": "properties",
        ".gitattributes": "ignore",
        ".gitmodules": "ignore",
        "ssh_config": "ssh_config",
        "known_hosts": "ssh_config",
        // --- Documentation ---
        "*.md": "markdown",
        "*.markdown": "markdown",
        "*.txt": "plaintext",
        // --- Template Engines ---
        "*.twig": "twig",
        "*.blade.php": "blade",
        "*.liquid": "liquid",
        "*.njk": "nunjucks",
        "*.hbs": "handlebars",
        // --- Project Specific: AI Tools & Frameworks ---
        ".agent/workflows/*.md": "markdown", // Antigravity workflow docs
        ".agent/instructions/**/*.md": "markdown", // AI instruction sets
        ".agents/**/*.md": "markdown", // Agent configuration docs
        ".specify/memory/*.md": "markdown", // SpecKit memory files
        ".specify/scripts/**/*.sh": "shellscript", // SpecKit Bash scripts
        ".specify/scripts/**/*.ps1": "powershell", // SpecKit PowerShell scripts
        ".specify/templates/*.{md,html,txt}": "markdown", // SpecKit templates
        ".gemini/antigravity/brain/*.md": "markdown", // Gemini core thinking chains
        ".gemini/antigravity/logs/*.log": "plaintext", // Gemini logs
        ".roo/commands/*.{sh,bash}": "shellscript", // Roo Code command scripts
        ".claude/commands/*.{sh,bash}": "shellscript", // Claude specific scripts
        ".qwen/commands/*.{sh,bash}": "shellscript", // Qwen specific scripts
        ".amazonq/**/*.md": "markdown", // Amazon Q mapping docs
        ".augment/**/*.md": "markdown", // Augment mapping docs
        ".bob/**/*.md": "markdown", // Bob mapping docs
        ".codebuddy/**/*.md": "markdown", // CodeBuddy docs
        ".codex/**/*.md": "markdown", // Codex docs
        ".kilocode/**/*.md": "markdown", // KiloCode docs
        ".opencode/**/*.md": "markdown", // OpenCode docs
        ".qoder/**/*.md": "markdown", // Qoder docs
        ".shai/**/*.md": "markdown", // SHAI docs
        ".cursor/rules/*.md": "markdown", // Cursor rules definition
        ".windsurf/rules/*.md": "markdown", // Windsurf rules definition
        ".github/workflows/*.yml": "yaml", // GitHub Actions workflows
        ".vscode/*.json": "jsonc", // VS Code local configs (support comments)
        "*.agent-flow": "json" // Agent Flow resource files
    }
}
