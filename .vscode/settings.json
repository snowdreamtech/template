{
    "vsicons.dontShowNewVersionMessage": true,
    "workbench.layoutControl.enabled": false,
    "workbench.startupEditor": "none",
    "workbench.colorTheme": "Solarized Dark",
    "workbench.iconTheme": "vscode-icons",
    "chat.promptFilesRecommendations": {
        "speckit.constitution": true,
        "speckit.specify": true,
        "speckit.plan": true,
        "speckit.tasks": true,
        "speckit.implement": true
    },
    "chat.tools.terminal.autoApprove": {
        ".specify/scripts/bash/": true,
        ".specify/scripts/powershell/": true
    },
    "files.associations": {
        // 1. Web / JavaScript / TypeScript
        "*.js": "javascript",
        "*.jsx": "javascriptreact",
        "*.ts": "typescript",
        "*.tsx": "typescriptreact",
        "*.vue": "vue",
        "*.svelte": "svelte",
        "*.html": "html",
        "*.css": "css",
        "*.scss": "scss",
        "*.less": "less",
        "*.wasm": "wasm",
        // 2. Python
        "*.py": "python",
        "*.pyi": "python",
        "*.pyw": "python",
        "*.pyd": "python",
        "requirements*.txt": "pip-requirements",
        "Pipfile": "toml",
        "Pipfile.lock": "json",
        // 3. Go / Rust / Java / Kotlin
        "*.go": "go",
        "go.mod": "go.mod",
        "go.sum": "go.sum",
        "*.rs": "rust",
        "*.java": "java",
        "*.kt": "kotlin",
        "*.kts": "kotlin",
        // 4. C / C++ / Objective-C / Swift
        "*.c": "c",
        "*.h": "cpp",
        "*.cpp": "cpp",
        "*.hpp": "cpp",
        "*.m": "objective-c",
        "*.mm": "objective-cpp",
        "*.swift": "swift",
        // 5. PHP / Ruby / Perl
        "*.php": "php",
        "*.phtml": "php",
        "*.rb": "ruby",
        "Gemfile": "ruby",
        "Rakefile": "ruby",
        "*.pl": "perl",
        "*.pm": "perl",
        // 6. Shell / PowerShell / Makefile
        "*.sh": "shellscript",
        ".bash*": "shellscript",
        ".zsh*": "shellscript",
        ".profile": "shellscript",
        "*.ps1": "powershell",
        "*.psm1": "powershell",
        "Makefile": "makefile",
        "GNUmakefile": "makefile",
        // 7. DevOps / Infrastructure (Docker, K8s, Terraform, Nginx)
        "Dockerfile*": "dockerfile",
        "docker-compose*.yml": "yaml",
        "*.tf": "terraform",
        "*.tfvars": "terraform",
        "*.hcl": "hcl",
        "nginx.conf": "nginx",
        "*.kubeconfig": "yaml",
        // 8. Config / Data (YAML, JSON, TOML, SQL, XML)
        "*.yaml": "yaml",
        "*.yml": "yaml",
        "*.json": "json",
        "*.jsonc": "jsonc",
        ".eslintrc": "jsonc",
        ".prettierrc": "json",
        "*.toml": "toml",
        "*.sql": "sql",
        "*.xml": "xml",
        "*.plist": "xml",
        ".env*": "properties",
        "*.ini": "ini",
        ".editorconfig": "properties",
        // 9. Git / System
        ".gitignore": "ignore",
        ".gitconfig": "properties",
        ".gitattributes": "ignore",
        ".gitmodules": "ignore",
        "ssh_config": "ssh_config",
        "known_hosts": "ssh_config",
        // 10. Documentation
        "*.md": "markdown",
        "*.markdown": "markdown",
        "*.txt": "plaintext",
        // 11. Template Engines
        "*.twig": "twig",
        "*.blade.php": "blade",
        "*.liquid": "liquid",
        "*.njk": "nunjucks",
        "*.hbs": "handlebars",
        // 12. Project Specific (AI Tools, Frameworks, etc.)
        ".agent/workflows/*.md": "markdown",
        ".agent/instructions/**/*.md": "markdown",
        ".agents/**/*.md": "markdown",
        ".specify/memory/*.md": "markdown",
        ".specify/scripts/**/*.sh": "shellscript",
        ".specify/scripts/**/*.ps1": "powershell",
        ".specify/templates/*.{md,html,txt}": "markdown",
        ".gemini/antigravity/brain/*.md": "markdown",
        ".gemini/antigravity/logs/*.log": "plaintext",
        ".roo/commands/*.{sh,bash}": "shellscript",
        ".claude/commands/*.{sh,bash}": "shellscript",
        ".qwen/commands/*.{sh,bash}": "shellscript",
        ".cursor/rules/*.md": "markdown",
        ".windsurf/rules/*.md": "markdown",
        ".github/workflows/*.yml": "yaml",
        ".vscode/*.json": "jsonc",
        "*.agent-flow": "json"
    }
}